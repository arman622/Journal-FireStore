<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/shape"
    tools:context=".JournalListActivity"
    android:padding="8dp">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/list_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/no_journals_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/no_thought_hint"
        app:layout_constraintBottom_toBottomOf="@id/list_recyclerview"
        app:layout_constraintEnd_toEndOf="@+id/list_recyclerview"
        app:layout_constraintStart_toStartOf="@+id/list_recyclerview"
        app:layout_constraintTop_toTopOf="@+id/list_recyclerview"
        android:visibility="invisible"/>

</androidx.constraintlayout.widget.ConstraintLayout>